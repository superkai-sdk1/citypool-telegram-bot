# Переменные окружения
BOT_TOKEN=your_bot_token_from_BotFather
NODE_ENV=development

# Настройки времени
POLL_TIME=01:00
TIMEZONE=Europe/Moscow

# Настройки базы данных
DATABASE_PATH=./database.sqlite
# На Render в production будет использоваться /opt/render/project/data/database.sqlite

# Настройки групп (жестко заданные)
# TITAN | City (с топиком Сборы)
CITY_GROUP_ID=-1001234567890
CITY_TOPIC_ID=123

# TITAN | Classic (без топика)
CLASSIC_GROUP_ID=-1001234567891

# Настройки опросов
CITY_POLL_QUESTION=Городская мафия
CLASSIC_POLL_QUESTION=Спортивная мафия
POLL_OPTIONS=Я приду,Меня не будет,Я думаю,Я опаздаю

# Настройки напоминаний
REMINDER_END_TIME=19:00

# Настройки для деплоя (только для production)
# URL вашего сервиса на Render для предотвращения засыпания
# RENDER_SERVICE_URL=https://your-service-name.onrender.com
